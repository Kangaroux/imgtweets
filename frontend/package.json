{
  "name": "frontend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist/ && mkdir dist/",
    "build:html": "cp src/index.html dist/",
    "build:js": "esbuild app=src/index.jsx --bundle --minify --sourcemap --outdir=dist --jsx-factory=h --jsx-fragment=Fragment",
    "build:css": "esbuild style=src/style.css --bundle --minify --sourcemap --outdir=dist",
    "build": "yarn build:html && yarn build:js && yarn build:css",
    "serve": "esbuild app=src/index.jsx style=src/style.css --bundle --sourcemap --jsx-factory=h --jsx-fragment=Fragment --serve=localhost:4321 --servedir=src --outdir=src/static"
  },
  "devDependencies": {
    "esbuild": "^0.14.38"
  },
  "dependencies": {
    "mobx": "5",
    "mobx-preact": "^3.0.0",
    "normalize.css": "^8.0.1",
    "preact": "^10.7.1"
  }
}
