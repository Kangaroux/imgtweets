{
  "name": "frontend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist/",
    "build": "esbuild app=src/index.jsx style=src/style.css --bundle --minify --jsx-factory=h --jsx-fragment=Fragment --outdir=dist",
    "serve": "esbuild app=src/index.jsx style=src/style.css --bundle --sourcemap --jsx-factory=h --jsx-fragment=Fragment --serve=localhost:4321 --servedir=src --outdir=src/static"
  },
  "devDependencies": {
    "esbuild": "^0.14.38"
  },
  "dependencies": {
    "normalize.css": "^8.0.1",
    "preact": "^10.7.1"
  }
}